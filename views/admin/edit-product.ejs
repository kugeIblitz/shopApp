<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if(editing){%>edit-product/<%}else{%>add-product<%}%>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" <% if(editing){%> value="<%= product.title %>"<%} %>>
            </div>
            <div class="form-control">
                <label for="image">Image URL</label>
                <input type="text" name="image" id="image"<% if(editing){%> value="
                <%= product.image %>"<%} %>>
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" 
                <% if(editing){%> value="<%= product.price %>"<%} %>>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description"  
                <% if(editing){%> value="<%= product.desc %>"<%} %>rows="5"></textarea>
            </div>
            <% if(editing) {%> <input type="hidden" name="id" value="<%= product.id %>"/> <%}%>
            <button class="btn" type="submit"><% if (editing){%>update product<%}else{%>Add Product <%}%></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>